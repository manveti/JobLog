<Window x:Class="JobLog.JobPostingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobLog"
        mc:Ignorable="d"
        Title="Job Posting" Width="1000" Height="900" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <local:JobPostingControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" x:Name="posting_ctrl"/>

        <Button Grid.Row="1" Grid.Column="1" Margin="2" Content="OK" Click="doOk"/>
        <Button Grid.Row="1" Grid.Column="2" Margin="2" Content="Cancel" Click="doCancel"/>
    </Grid>
</Window>
